/* 页面样式 */
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px;
  min-height: calc(100vh - 50px); /* 减去tabbar高度 */
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 40px; /* 增加标题与按钮之间的间距 */
  padding: 20px 30px; /* 增加标题区域的高度 */
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 400px;
}

.title {
  font-size: 26px; /* 增加标题的字体大小 */
  font-weight: bold;
  color: #007aff; /* 使用清新的蓝色 */
  letter-spacing: 1px;
}

.button-container {
  margin: 20px 0; /* 增加按钮之间的间距 */
  width: 100%;
  max-width: 500px; /* 增加按钮的最大宽度 */
}

button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80px; /* 增加按钮的高度 */
  font-size: 20px; /* 增加按钮文本的字体大小 */
  background-color: rgba(255, 255, 255, 0.8);
  color: #007aff;
  border: none;
  border-radius: 30px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s, transform 0.3s;
}

button:hover {
  background-color: rgba(255, 255, 255, 0.9);
  transform: translateY(-4px);
}

/* 为按钮增加点击效果 */
button:active {
  background-color: rgba(255, 255, 255, 1);
  transform: translateY(0);
}

.icon {
  width: 30px; /* 增加图标的大小 */
  height: 30px; /* 增加图标的大小 */
  margin-right: 15px; /* 增加图标与文本之间的间距 */
}